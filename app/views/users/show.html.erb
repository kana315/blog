<h1><%= @user.name %>さんのページ</h1>

<p>メールアドレス:<%= @user.email %></p>

<h2>お気に入り一覧：</h2>
<div class="container index_container">
<% @favorites.each do |favorites| %>
  <div class="row index_content">
    <h4 class="col-md-3 col-xs-12"><%= favorites.blog.title %></h4>
    <p class="col-md-3 col-xs-12"><%= favorites.blog.content %></p>
    <div class="col-md-6">
      <%= link_to '詳細を見る', blog_path(favorites.blog.id), class:'btn btn-warning' %>
    </div>
  </div>
<% end %>
</div>
